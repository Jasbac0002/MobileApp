<item android:left="3dp" android:top="3dp">
    <shape>
        <solid android:color="@android:color/darker_gray" />
        <corners android:radius="10dp" />
    </shape>
</item>
<!-- White foreground. -->
<item android:bottom="3dp" android:right="3dp">
    <shape>
        <solid android:color="@color/teal" />
        <corners android:radius="10dp" />
    </shape>
</item>
</layer-list>