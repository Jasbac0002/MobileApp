<?xml version="1.0" encoding="utf-8"?>

<!-- activity_quiz.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Add your quiz screen layout here -->
    <!-- Example: ImageView for the logo, ImageView for the image to be asked -->

    <LinearLayout
        android:id="@+id/buttonContainer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonContainer2"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_custom"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:background="@drawable/button_custom"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonContainer1"
        android:padding="8dp">>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:background="@drawable/button_custom"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:background="@drawable/button_custom"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
