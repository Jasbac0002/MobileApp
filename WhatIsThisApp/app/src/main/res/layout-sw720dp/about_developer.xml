<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutDeveloper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developers "
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvDevelopers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jasper Bacani"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_browse"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:text="Browse AIS Website"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_custom"
        app:layout_constraintBottom_toTopOf="@id/btn_appinfo_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_appinfo_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_custom"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="43dp"
            android:paddingTop="10dp" >

            <!-- First row -->
            <TableRow>
                <TextView
                    android:id="@+id/labelMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/mobileNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="022333444"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="256dp"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_callme"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Call Me!"
                    android:padding="8dp"
                    android:background="@drawable/button_custom"
                    android:textColor="@color/white"
                    android:layout_marginBottom="30dp"/>
            </TableRow>

            <!-- Second row -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Email :"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jaba008@ess.ais.ac.nz"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>
                <TextView></TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_email_me"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Email Me!"
                    android:padding="8dp"
                    android:background="@drawable/button_custom"
                    android:textColor="@color/white"
                    android:layout_marginBottom="30dp"/>
            </TableRow>

            <!-- Third row -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28a Linwood Avenue,"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>
                <TextView></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mt Albert, Auckland"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>
                <TextView></TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_locateme"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Locate Me via Google Maps"
                    android:background="@drawable/button_custom"
                    android:padding="8dp"
                    android:textColor="@color/white"/>
            </TableRow>

        </TableLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>