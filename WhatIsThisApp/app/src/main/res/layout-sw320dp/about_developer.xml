<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutDeveloper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developers "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvDevelopers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Jasper Bacani"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:paddingTop="30dp" >

            <!-- First row -->
            <TableRow>
                <TextView
                    android:id="@+id/labelMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/mobileNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="022333444"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_callme"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_custom"
                    android:padding="0dp"
                    android:text="Call Me!"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
            </TableRow>

            <!-- Second row -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Email :"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jaba008@ess.ais.ac.nz"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>
                <TextView>

                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_email_me"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_custom"
                    android:padding="8dp"
                    android:text="Email Me!"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
            </TableRow>

            <!-- Third row -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28a Linwood Avenue,"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>

                <TextView android:layout_height="9dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mt Albert, Auckland"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textAlignment="center"/>
            </TableRow>
            <TableRow>
                <TextView>

                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_locateme"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_custom"
                    android:padding="8dp"
                    android:text="Locate Me via Google Maps"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
            </TableRow>


        </TableLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_browse"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:text="Browse AIS Website"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_appinfo_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextSizeCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_appinfo_back"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_custom"
            android:gravity="center"
            android:text="Back"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>